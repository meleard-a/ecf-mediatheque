<body class="d-flex flex-column min-vh-100">
  {% block navbar %}
  <div class="container-fluid">
    <header class="blog-header mb-2 ">
      <div class="row flex-nowrap justify-content-between align-items-center">
        <div class="navbarText text-center pt-1">
          <div class="navbar-brand mb-0 h1">Bienvenue à la médiathèque de</div>
          <a class="navbar-brand mb-0 h1 link-light" href="{{ path('home')}}">LA CHAPELLE-CURREAUX</a>
        </div>
      </div>
    </header>
    <div class="nav-scroller py-1 mb-2 row ">
      <nav class="menuNav nav col">
        <a class="p-2 link-secondary" href="{{ path('home')}}">Accueil</a>
        <a class="p-2 link-secondary" href="{{ path('home', { '_fragment' : 'agenda' }) }}">Agenda</a>
        <a class="p-2 link-secondary" href="{{ path('catalog')}}">Catalogue</a>
        <a class="p-2 link-secondary" href="#">Aide</a>
      </nav>
      <div class="d-grid gap-2 d-md-flex justify-content-md-end col">
      {% if app.user %}
        <a href="{{ path('account') }}" class="link-secondary">
          <button  type="button" class="registerBtn btn btn-sm me-md-2" >MON COMPTE</button>
        </a>
        <a href="{{ path('app_logout') }}" class="link-secondary">
          <button  type="button" class="connectBtn btn btn-sm" >DECONNEXION</button>
        </a>
        <a href="{{ path('cart') }}" class="link-secondary">
          <button type="button" class="connectBtn btn btn-sm">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart" viewBox="0 0 16 16">
              <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
            </svg>
          </button>
        </a>
      {% else %}
        <button  type="button" class="registerBtn btn btn-sm me-md-2" ><a href="{{ path('register') }}" class="link-secondary">S'INSCRIRE</a></button>
        <button  type="button" class="connectBtn btn btn-sm" ><a href="{{ path('app_login') }}" class="link-secondary">SE CONNECTER</a></button>
      {% endif %}
      </div>
    </div>
  </div>
  {% endblock %}

  {% block content %}
  <main class="container">
    <div class="row p-4 p-md-5 mb-4 rounded ">
