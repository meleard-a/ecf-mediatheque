  {% block footer %}
  <footer class="blog-footer mt-auto">
    <div class="container text-center">
      <p><a href="#" class="footerLink">Mentions légales</a> / <a href="#" class="footerLink">Plan du site</a> /  Site réalisé par <a href="#" class="footerLink">Anne Méléard</a></p>
    </div>
  </footer>
  {% endblock %}
<script src="{{ asset ('assets/js/bootstrap.bundle.min.js') }}"></script>
